<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <!-- Category Management -->
    <servlet>
        <servlet-name>CreateCategoryServlet</servlet-name>
        <servlet-class>com.example.assignment_wcd.controller.category.CreateCategoryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateCategoryServlet</servlet-name>
        <url-pattern>/admin/categories/create</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ListCategoryServlet</servlet-name>
        <servlet-class>com.example.assignment_wcd.controller.category.ListCategoryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListCategoryServlet</servlet-name>
        <url-pattern>/admin/categories/list</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DetailCategoryServlet</servlet-name>
        <servlet-class>com.example.assignment_wcd.controller.category.DetailCategoryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DetailCategoryServlet</servlet-name>
        <url-pattern>/admin/categories/detail</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>UpdateCategoryServlet</servlet-name>
        <servlet-class>com.example.assignment_wcd.controller.category.UpdateCategoryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateCategoryServlet</servlet-name>
        <url-pattern>/admin/categories/update</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DeleteCategoryServlet</servlet-name>
        <servlet-class>com.example.assignment_wcd.controller.category.DeleteCategoryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteCategoryServlet</servlet-name>
        <url-pattern>/admin/categories/delete</url-pattern>
    </servlet-mapping>
    <!-- End of Category Management -->

    <!-- Dish Management -->
    <servlet>
        <servlet-name>CreateDishServlet</servlet-name>
        <servlet-class>com.example.assignment_wcd.controller.dish.CreateDishServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateDishServlet</servlet-name>
        <url-pattern>/admin/dish/create</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ListDishServlet</servlet-name>
        <servlet-class>com.example.assignment_wcd.controller.dish.ListDishServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListDishServlet</servlet-name>
        <url-pattern>/admin/dish/list</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DetailDishServlet</servlet-name>
        <servlet-class>com.example.assignment_wcd.controller.dish.DetailDishServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DetailDishServlet</servlet-name>
        <url-pattern>/admin/dish/detail</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>UpdateDishServlet</servlet-name>
        <servlet-class>com.example.assignment_wcd.controller.dish.UpdateDishServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateDishServlet</servlet-name>
        <url-pattern>/admin/dish/update</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DeleteDishServlet</servlet-name>
        <servlet-class>com.example.assignment_wcd.controller.dish.DeleteDishServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteDishServlet</servlet-name>
        <url-pattern>/admin/dish/delete</url-pattern>
    </servlet-mapping>
    <!-- End of Dish Management -->
</web-app>